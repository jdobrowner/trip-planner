{
  "name": "trip-planner",
  "version": "1.0.0",
  "description": "A simpl trip planner web app",
  "main": "src/index.js",
  "repository": "git@github.com:jdobrowner/trip-planner.git",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive ./test",
    "test:watch": "npm run test -- --watch",
    "start": "npm run watch:css & npm run start:dev-server",
    "start:dev-server": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "build:js": "webpack",
    "build:css": "rm -f dist/style.css && lessc style/style.less --clean-css dist/style.css",
    "build:html": "rm -f dist/index.html && cp index.html dist/",
    "build": "rm -rf dist && mkdir -p dist && npm run build:html && npm run build:css && npm run build:js",
    "watch:js": "webpack --watch",
    "watch:css": "npm run build:css && chokidar-cmd -c 'npm run build:css' -t style/**/*.less",
    "watch": "webpack --watch & npm run watch:css"
  },
  "author": "Jason Dobrowner",
  "license": "ISC",
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-widgets": "^3.4.6",
    "redux": "^3.6.0",
    "redux-form": "^6.5.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-1": "^6.22.0",
    "chai": "^3.5.0",
    "chai-jquery": "^2.0.0",
    "chokidar": "^1.6.1",
    "chokidar-cmd": "^1.2.1",
    "jquery": "^3.1.1",
    "jsdom": "^9.12.0",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.2",
    "uglify-js": "^2.8.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
